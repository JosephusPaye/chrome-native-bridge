{
  "name": "@josephuspaye/chrome-native-bridge",
  "version": "0.0.0",
  "description": "A utility for buildng Chrome native messaging hosts",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "repository": "https://github.com/JosephusPaye/chrome-native-bridge.git",
  "author": "Josephus Paye II",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "uvu -r esm tests/",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.js\" \"*.{js,json,md}\" \"host/**/*.{js,json}\" \"extension/**/*.{js,json}\"",
    "format:check": "prettier --list-different \"src/**/*.ts\" \"tests/**/*.js\" \"*.{js,json,md}\""
  },
  "devDependencies": {
    "@josephuspaye/pipe-emitter": "^0.1.0",
    "@types/node": "^14.14.7",
    "esm": "^3.2.25",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3",
    "uvu": "^0.3.4"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true
  }
}
